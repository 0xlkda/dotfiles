  helper = !/Users/alex/.nix-profile/bin/gh auth git-credential

[alias]
  view = !$(which gh) browse
  wt = worktree
  cwt = !sh $HOME/code/dotfiles/clone-for-worktree.sh
  unstage = reset HEAD --
  untrack = rm --cached --
  last = log -1 HEAD
  diffs = diff --staged --
  rename = mv --

[push]
  autoSetupRemote = true
  default = current

[pull]
  rebase = true

[gpg]
  format = ssh

[gpg "ssh"]
  program = /usr/bin/ssh-keygen
  allowedSignersFile = /Users/alex/code/dotfiles/git/allowed_signers

[commit]
  gpgsign = true

[merge]
